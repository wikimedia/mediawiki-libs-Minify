{
	"name": "wikimedia/minify",
	"description": "Minification of JavaScript code and CSS stylesheets.",
	"license": "Apache-2.0",
	"homepage": "https://gerrit.wikimedia.org/g/mediawiki/libs/Minify",
	"authors": [
		{
			"name": "Paul Copperman",
			"email": "paul.copperman@gmail.com"
		},
		{
			"name": "Trevor Parscal",
			"email": "tparscal@wikimedia.org"
		},
		{
			"name": "Timo Tijhof",
			"email": "krinklemail@gmail.com"
		},
		{
			"name": "Roan Kattouw",
			"email": "roan.kattouw@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\Minify\\": "src/"
		},
		"psr-0": {
			"CSSMin": "src/"
		}
	},
	"require": {
		"php": ">=8.1",
		"ext-fileinfo": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"pear/net_url2": "~2.2.2"
	},
	"require-dev": {
		"mck89/peast": "^1.16",
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "10.5.58",
		"wikimedia/testing-access-wrapper": "~3.0.0 || ~4.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"bench": "@php -d opcache.enable_cli=1 tests/bench.php",
		"changelog": "git log --format='* %s (%aN)' --no-merges --reverse $(git describe --tags --abbrev=0 HEAD)...HEAD | sort | grep -vE '^\\* (build|docs?|tests?):'",
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan --allow-polyfill-parser --no-progress-bar",
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
